@model IEnumerable<ExertSite.Models.Portfolio>

@{
    ViewData["Title"] = "Index";
    Layout = "/Views/Shared/_Admin.cshtml";

}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PortfolioImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PortfolioName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PortfolioText)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PortfolioImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PortfolioName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PortfolioText)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PortfolioId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PortfolioId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PortfolioId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
