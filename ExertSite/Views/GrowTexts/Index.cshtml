@model IEnumerable<ExertSite.Models.GrowText>

@{
    ViewData["Title"] = "Index";
    Layout = "/Views/Shared/_Admin.cshtml";

}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GrowtextImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@Url.Content(item.GrowtextImage)" class="d-flex w-25" asp-append-version="true" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GrowTextId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GrowTextId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GrowTextId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
