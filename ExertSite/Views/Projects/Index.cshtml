@model IEnumerable<ExertSite.Models.Project>

@{
    ViewData["Title"] = "Index";
    Layout = "/Views/Shared/_Admin.cshtml";
    ViewData["pageTitle"] = "Projects";

}



<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="card container-fluid">


    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectImage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Service)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@Url.Content(item.ProjectImage)" class="d-flex w-25" asp-append-version="true" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service.ServiceId)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProjectId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ProjectId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ProjectId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
