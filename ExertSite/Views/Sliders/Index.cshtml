@model IEnumerable<ExertSite.Models.Slider>

@{
    ViewData["Title"] = "Index";
    Layout = "/Views/Shared/_Admin.cshtml";
    ViewData["pageTitle"] = "Sliders";

}

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="card container-fluid">

<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.SliderImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SliderText)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.SliderDesc)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.SliderPosition)

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                <img src="@Url.Content(SiteOperations.SliderFolder+item.SliderImage)" class="d-flex w-25" asp-append-version="true" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SliderText)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SliderDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SliderPosition)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SliderId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SliderId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SliderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
