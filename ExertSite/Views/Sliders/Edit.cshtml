@model ExertSite.Models.Slider

@{
    ViewData["Title"] = "Edit";
    Layout = "/Views/Shared/_Admin.cshtml";
}
<script src="https://cdn.ckeditor.com/ckeditor5/31.1.0/classic/ckeditor.js"></script>

<h1>Edit</h1>

<h4>Slider</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SliderId" />
            <div class="form-group">
                <label asp-for="SliderImage" class="control-label"></label>
                <input type="file" asp-for="SliderImage" class="form-control" />
                <span asp-validation-for="SliderImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderText" class="control-label"></label>
                <textarea asp-for="SliderText" class="ckeditor" id="header">Metin</textarea>
                <span asp-validation-for="SliderText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderDesc" class="control-label"></label>
                <textarea asp-for="SliderDesc" class="form-control" id="desc">Metin</textarea>
                <span asp-validation-for="SliderDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script>
    ClassicEditor
        .create(document.querySelector('#header'))
        .then(editor => {
            console.log(editor);
        })
        .catch(error => {
            console.error(error);
        });
</script>
<script>
    ClassicEditor
        .create(document.querySelector('#desc'))
        .then(editor => {
            console.log(editor);
        })
        .catch(error => {
            console.error(error);
        });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
